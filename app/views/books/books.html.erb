<br><br><br>
<%= render 'modal' %>

<button id= "new_forms" class="btn btn-primary"> Add New Book </button>
<%#= link_to "Add New Book", , id: "new_forms"%>
<table border="3" id="book_table">
  <tr>
    <th>Book-Name</th>
    <th>Author-Name</th>
    <th>No. of Books</th>
  </tr>

  <% @books.each do |book| %>
    <tr>
      <td><%= book.book_name %></td>
      <td><%= book.author %></td>
      <td><%= book.available_book %></td>
      <td> <button id= "edit_forms" data= "<%= book.id %>" class="btn btn-primary"> edit Book </button></td>
    </tr>
  <% end %>
</table>

<script type="text/javascript">
  $("#new_forms").click(function(){
    $.ajax({
      url: "/new_book",
      method: "get"
    })
  })

  $("#edit_forms").click(function(){
    ids = $(this).attr('data');
    $.ajax({
      url: "/edit_book/" + ids,
      method: "get"
    })
  })

</script>